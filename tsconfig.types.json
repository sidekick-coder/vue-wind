{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "types",
        "declaration": true,
        "emitDeclarationOnly": true,
        "noEmit": false,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.vue"],
    "exclude": ["./vite.config.ts", "./node_modules", "./src/**/*.spec.ts"]
}
