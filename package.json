{
    "name": "vue-wind",
    "version": "0.0.29-next",
    "description": "vue components using tailwind styles",
    "types": "types",
    "exports": {
        ".": {
            "import": "./dist/index.es.js",
            "require": "./dist/index.umd.js"
        }
    },
    "scripts": {
        "build": "npm run clean && vite build && npm run build:types",
        "build:lib": "vite build",
        "build:types": "vue-tsc -p ./tsconfig.types.json",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "prepublishOnly": "npm run test && npm run build",
        "clean": "rm -rf dist && rm -rf types",
        "docs": "start-storybook -p 6006",
        "docs:build": "build-storybook",
        "docs:preview": "npx http-server storybook-static"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/htron-dev/vue-wind.git"
    },
    "keywords": [
        "vue",
        "tailwind",
        "components"
    ],
    "author": "Henrique",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/htron-dev/vue-wind/issues"
    },
    "homepage": "https://htron-dev.github.io/vue-wind",
    "devDependencies": {
        "@babel/core": "^7.17.9",
        "@babel/types": "^7.17.0",
        "@storybook/addon-actions": "^6.4.22",
        "@storybook/addon-essentials": "^6.4.22",
        "@storybook/addon-links": "^6.4.22",
        "@storybook/vue3": "^6.4.22",
        "@types/lodash": "^4.14.179",
        "@types/node": "^17.0.21",
        "@vitejs/plugin-vue": "^2.3.3",
        "@vue/test-utils": "^2.0.0-rc.18",
        "babel-loader": "^8.2.5",
        "happy-dom": "^2.41.0",
        "storybook-builder-vite": "^0.1.23",
        "typescript": "^4.5.5",
        "vite": "^2.9.9",
        "vitest": "^0.5.8",
        "vue": "^3.2.33",
        "vue-loader": "^16.8.3",
        "vue-tsc": "^0.32.1"
    },
    "dependencies": {
        "@vueuse/core": "^7.7.1",
        "lodash": "^4.17.21"
    }
}
