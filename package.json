{
    "name": "vue-wind",
    "version": "0.0.8-next",
    "description": "vue components using tailwind styles",
    "types": "types",
    "exports": {
        ".": {
            "import": "./dist/index.es.js",
            "require": "./dist/index.umd.js"
        }
    },
    "scripts": {
        "build": "npm run clean && vite build && npm run build:types",
        "build:types": "vue-tsc -p ./tsconfig.types.json",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "prepublish": "npm run test && npm run build",
        "clean": "rm -rf dist && rm -rf types"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/htron-dev/vue-wind.git"
    },
    "keywords": [
        "vue",
        "tailwind",
        "components"
    ],
    "author": "Henrique",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/htron-dev/vue-wind/issues"
    },
    "homepage": "https://htron-dev.github.io/vue-wind",
    "devDependencies": {
        "@babel/types": "^7.17.0",
        "@types/lodash": "^4.14.179",
        "@types/node": "^17.0.21",
        "@vitejs/plugin-vue": "^2.2.2",
        "@vue/test-utils": "^2.0.0-rc.18",
        "happy-dom": "^2.41.0",
        "typescript": "^4.5.5",
        "vite": "^2.8.4",
        "vitest": "^0.5.8",
        "vue": "^3.2.31",
        "vue-tsc": "^0.32.1"
    },
    "dependencies": {
        "@vueuse/core": "^7.7.1",
        "lodash": "^4.17.21"
    }
}
